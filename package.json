{
    "name": "ether-desktop",
    "version": "1.0.0",
    "description": "Ether - Desktop Game Store Application",
    "main": "electron/main.js",
    "author": "Ryan DPC",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "npm run dev --prefix frontend",
        "dev:electron": "concurrently \"npm run dev --prefix frontend\" \"wait-on http://localhost:5173 && electron .\"",
        "build": "npm run build --prefix frontend",
        "build:electron": "npm run build --prefix frontend && electron-builder",
        "start:backend": "npm start --prefix backend",
        "start:server": "npm start --prefix server",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "adm-zip": "^0.5.16",
        "axios": "^1.13.2",
        "cloudinary": "^2.8.0",
        "electron-squirrel-startup": "^1.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.ether.gamestore",
        "productName": "Ether",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "electron/**/*",
            "frontend/dist/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "frontend/public/logo.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
